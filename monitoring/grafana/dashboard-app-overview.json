{
  "title": "App Overview - Frontend & Backend",
  "uid": "app-overview",
  "schemaVersion": 27,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "CPU Usage (frontend & backend)",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"frontend.*|backend.*\"}[5m])",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "graph",
      "title": "Pod Restarts",
      "targets": [
        {
          "expr": "kube_pod_container_status_restarts_total{namespace=\"default\", pod=~\"frontend.*|backend.*\"}",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Backend Up",
      "targets": [
        {
          "expr": "max(up{job=\"backend\"})"
        }
      ]
    }
  ]
}
